# --- Server ------------------------------------------------------------------
PORT=3001

# --- Azure OpenAI ------------------------------------------------------------
AZURE_OPENAI_ENDPOINT=https://agent-ai-serviceslyhl.openai.azure.com/
# Optional: If omitted, DefaultAzureCredential (Managed Identity, Azure CLI, etc.) is used
# AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# --- Frame Analysis ----------------------------------------------------------
MAX_ANALYZED_FRAMES=10
FRAME_CAPTURE_INTERVAL=60000
PROMPT_PROFILE=hub-lobby-default

# --- Model Mode: 'cloud' (Azure OpenAI) or 'edge' (local SLM) --------------
MODEL_MODE=edge
SLM_URL=http://10.11.70.24:8000

# --- RTSP Stream -------------------------------------------------------------
# Default RTSP URL (can be overridden via the UI)
# Format: rtsp://username:password@host:port/path
RTSP_URL=rtsp://admin:%3FW%21ndows%4010@10.11.70.10:554

# --- Frontend ----------------------------------------------------------------
# Backend API URL for the React frontend (used at build time for dev server)
VITE_API_BASE_URL=http://localhost:3001
# Pre-filled RTSP URL in the UI
VITE_DEFAULT_RTSP_URL=rtsp://admin:%3FW%21ndows%4010@10.11.70.10:554
